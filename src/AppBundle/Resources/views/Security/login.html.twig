{% extends "AppBundle::layout.html.twig" %}

{% block fos_user_content %}
            <div class="content container">
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
                        <div class="well well-sm">
                            <h1 class="text-center">Se connecter</h1>
                            <hr />
                            
                            {% if error  %}
                                <div class="alert alert-danger" role="alert">
                                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> {{ error.messageKey|trans(error.messageData, 'security') }}
                                </div>
                            {% endif %}
                            <form action="{{ path("fos_user_security_check") }}" method="POST" class="form-group">
                                
                               
                                <div class="form-group">
                                    <label for="username" class="sr-only">Nom*</label>
                                    <input class="form-control" type="text" id="username" name="_username" placeholder="Votre nom" required="required" autofocus=""/>
                                </div>
                                <div class="form-group">
                                    <label for="password" class="sr-only">Mot de passe*</label>
                                    <input class="form-control" type="password" id="password" name="_password" placeholder="Votre mot de passe" required="required" />
                                </div>
                                <div class="form-group">
                                    <div class="checkbox">
                                        <label  for="remember_me">
                                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />Se souvenir de moi
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button id="submit" class="btn btn-lg btn-success btn-block" type="submit" name="submit">Connexion</button>
                                </div>
                                <hr />
                                <a id="forget" class="btn btn-warning btn-block" href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√© ?</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
{% endblock %}